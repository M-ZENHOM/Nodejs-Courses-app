{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types"],
    "moduleResolution": "node",
  },
  "include": [
    "./*.js",
    "./*.ts",
    "src/**/*.ts",
  ],
}